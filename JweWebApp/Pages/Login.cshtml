@page
@model JweWebApp.Pages.LoginModel
@{
}

<div class="container">


    <h1>Log in</h1>
    <div class="row">
        <div class="col-md-4">
                <form id="account" method="post" novalidate="novalidate">
                    <h4>Use a local account to log in.</h4>
                    <hr>

                    <div class="form-group">
                        <label asp-for="LoginViewModel.Email">Email</label>
                        <input class="form-control" type="text" asp-for="LoginViewModel.Email">
                        <span asp-validation-for="LoginViewModel.Email" class="text-danger field-validation-valid"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LoginViewModel.Password">Password</label>
                        <input type="password" asp-for="LoginViewModel.Password" class="form-control">
                        <span asp-validation-for="LoginViewModel.Password" class="text-danger field-validation-valid"></span>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" asp-for="LoginViewModel.RememberMe" class="form-check-input" />
                        Remember me?
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>


                </form>
            
        </div>
    </div>


</div>
