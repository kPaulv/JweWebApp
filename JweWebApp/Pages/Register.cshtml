@page
@model JweWebApp.Pages.RegisterModel
@{
}

<div class="container">

        <h1>Register</h1>

        <div class="row">
            <div class="col-md-4">
                <form id="registerForm" method="post" novalidate="novalidate">
                    <h4>Create a new account.</h4>
                    <hr>

                    <div class="form-group">
                        <label asp-for="RegisterViewModel.Email">Email</label>
                        <input type="text" asp-for="RegisterViewModel.Email" class="form-control">
                        <span asp-validation-for="RegisterViewModel.Email" class="text-danger field-validation-valid"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterViewModel.Password">Password</label>
                        <input type="password" asp-for="RegisterViewModel.Password" class="form-control">
                        <span asp-validation-for="RegisterViewModel.Password" class="text-danger field-validation-valid"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterViewModel.ConfirmPassword">Confirm Password</label>
                        <input type="password" asp-for="RegisterViewModel.ConfirmPassword" class="form-control">
                        <span asp-validation-for="RegisterViewModel.ConfirmPassword" class="text-danger field-validation-valid"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
               
                </form>
            </div>
            
        </div>

</div>

